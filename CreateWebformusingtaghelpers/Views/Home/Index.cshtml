@model CreateWebformusingtaghelpers.Models.Student
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
@*    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>*@
</div>
@*/*The .container class provides a responsive fixed width container*@
<div class ="container">
    <div class="col-sm-4">
        <form class="d-grid" asp-action="Index" asp-controller="Home" method="post">
            <div class="form-floating">
                <input asp-for="Rollnum" class="form-control"  placeholder="Enter RollNumber" />
                <label asp-for="Rollnum">Enter RollNumber</label>
            <br/>
            </div>
            <div class="form-floating ">
            <input asp-for="Name" placeholder="Enter Name" class="form-control" />
                <label asp-for="Name">Enter Name</label>
            <br/>
            </div>
            <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()">
                <option value="">Select Gender</option>
            </select>
            <br/>
            <label >Married:</label>
            <div class="form-check" >
                <input class="form-check-input" type="radio" asp-for="MartialStautus" value="Married" required>
                <label class="form-check-label">
                    Married
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="MartialStautus" value="Unmarried">
                <label class="form-check-label" >
                    Unmarried
                </label>
            </div>
            <br/>
            <div class="form-floating">
            <input asp-for="Age" placeholder="Enter Age" class="form-control" />
            <label asp-for="Age" >Enter Age</label>
            <br/>

            </div>

            <div class="form-floating">
            <input asp-for="Email" placeholder="Enter Email" class="form-control" />
            <label asp-for="Email" >Enter Email</label>
            <br/>

            </div>
            <input type="submit" value="submit" class="btn btn-outline-primary" />
        </form>
    </div>
</div>